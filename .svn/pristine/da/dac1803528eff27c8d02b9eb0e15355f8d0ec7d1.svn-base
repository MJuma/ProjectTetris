package tetris.gui;

/**
 * Enumeration class holding the possible 
 * screen sizes.
 * 
 * @author Mohammad Juma
 * @version 11-22-2012
 */
public enum TetrisScreenResolution
{
  /**
   * Small screen resolution.
   */
  Small("small", 480, 760, 25),
  
  /**
   * Medium screen resolution.
   */
  Medium("medium", 600, 905, 35),
  
  /**
   * Large screen resolution.
   */
  Large("large", 720, 1080, 45);
  
  /**
   * The name of the screen resolution.
   */
  private final String my_name;
  
  /**
   * The width of the screen resolution.
   */
  private final int my_width;
  
  /**
   * The width of the screen resolution.
   */
  private final int my_height;
  
  /**
   * The block size.
   */
  private final int my_block_size;

  /**
   * Screen Resolution Enumeration Class Constructor.
   * @param the_name The name of the screen resolution.
   * @param the_width The width of the screen resolution.
   * @param the_height The width of the screen resolution.
   * @param the_block_size The block size.
   */
  private TetrisScreenResolution(final String the_name,
                                 final int the_width,
                                 final int the_height,
                                 final int the_block_size)
  {
    my_name = the_name;
    my_width = the_width;
    my_height = the_height;
    my_block_size = the_block_size;
  }
  
  /**
   * Returns the name of the screen resolution.
   * @return my_name
   */
  public String getName()
  {
    return my_name;
  }
  
  /**
   * Returns the width of the screen resolution.
   * @return my_width
   */
  public int getWidth()
  {
    return my_width;
  }
  
  /**
   * Returns the height of the screen resolution.
   * @return my_height
   */
  public int getHeight()
  {
    return my_height;
  }
  
  /**
   * Returns the block size.
   * @return my_block_size
   */
  public int getBlockSize()
  {
    return my_block_size;
  }
}
